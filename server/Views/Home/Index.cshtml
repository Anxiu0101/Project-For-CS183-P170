@model server.Models.HomeViewModel;

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_CoverLayout.cshtml";
    var zhihustr = Model.ZhihuLast.ToString("yyyyMMdd_HHmmss");
    var weibostr = Model.ZhihuLast.ToString("yyyyMMdd_HHmmss");
}

<!-- this style when the mouse over the picture which will be more larger -->
<style type="text/css">
    #div1 img {
        cursor: pointer;
        transition: all 0.6s;
        overflow: hidden;
    }

    #div1 img:hover {
        transform: scale(1.2);
    }
</style>

<div class="fh5co-hero">
    <div class="fh5co-overlay"></div>
    <div class="fh5co-cover text-center" data-stellar-background-ratio="0.5"
        style="background-image: url(/images/cover_bg_2.jpg);">
        <div class="desc animate-box">
            <h2>Internet Social Media Search and Tendency Analyzer</h2>
            <!-- <span>Lovely Crafted by <a href="http://sc.chinaz.com/" target="_blank" class="fh5co-site-name"></a></span> -->
            <span>
                <p> <a asp-area="" asp-controller="Home" asp-action="About" class="btn btn-primary btn-lg">What's
                        this?</a></p>
            </span>
        </div>
    </div>
</div>
<!-- 微博和知乎图片超链接 以及github二维码-->
<div class="fh5co-listing">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-4 fh5co-item-wrap">
                <a class="fh5co-listing-item" asp-controller="Chronicle" asp-route-type="Weibo">
                    <img src="~/images/img-1.jpg" alt="Weibo" class="img-responsive">
                    <div class="fh5co-listing-copy">
                        <h2>Weibo</h2>
                        <span class="icon">
                            <i class="icon-chevron-right"></i>
                        </span>
                    </div>
                </a>
            </div>

            <div class="col-md-4 col-sm-4 fh5co-item-wrap">
                <a class="fh5co-listing-item" href="javascript:;">
                    <img src="~/images/QRcode.png" alt="二维码" class="img-responsive">
                    <div class="fh5co-listing-copy">
                        <h2>Scan the QR code to get source code</h2>
                    </div>
                </a>
            </div>

            <div class="col-md-4 col-sm-4 fh5co-item-wrap">
                <a class="fh5co-listing-item" asp-controller="Chronicle" asp-route-type="Zhihu">
                    <img src="~/images/img-3.jpg" alt="Zhihu" class="img-responsive">
                    <div class="fh5co-listing-copy">
                        <h2>Zhihu</h2>
                        <span class="icon">
                            <i class="icon-chevron-right"></i>
                        </span>
                    </div>
                </a>
            </div>

            <!-- END 3 row -->


        </div>
    </div>
</div>

<!-- clear float -->
<div style="clear:both"></div>
<div class="fh5co-section">
    <div class="container">
        <div class="row">
            <div class="col-md-6 fh5co-news">
                <br>
                <h3>Data of Weibo</h3>
                <ul>
                    <li>
                        <a asp-controller="Chronicle" asp-action="Details" asp-route-id="@Model.WeiboId">
                            <span class="fh5co-date">@Model.WeiboLast.ToString("yyyy/MM/dd HH:mm")</span>
                            <h3>Newly presentation of Weibo</h3>
                            <p>Hotspot ranking</p>
                        </a>
                    </li>
                </ul>
                <br><br>
                <h3>Data of Zhihu</h3>
                <ul>
                    <li>
                        <a asp-controller="Chronicle" asp-action="Details" asp-route-id="@Model.ZhihuId">
                            <span class="fh5co-date">@Model.ZhihuLast.ToString("yyyy/MM/dd HH:mm")</span>
                            <h3>Newly presentation of ZhiHu</h3>
                            <p>Hotspot ranking and Answer</p>
                        </a>
                    </li>
                </ul>
            </div>
            <!-- class="img-responsive mb20" -->
            <div class="col-md-6 fh5co-testimonial" id="div1">
                <a asp-controller="Chronicle" asp-action="Details" asp-route-id="@Model.WeiboId" asp-fragment="wbresult"
                    class="fh5co-listing-item">
                    <!-- auto update the link -->
                    <img src="~/data/@weibostr/WeiBoResult.jpg" alt="Weibo Result" height="200px"
                        class="img-responsive mb20">
                    <div id="wenzi">To the picture</div>
                </a>
                <br><br><br>
                <table>
                    <tr>
                        <td>
                            <a asp-controller="Chronicle" asp-action="Details" asp-route-id="@Model.ZhihuId"
                                asp-fragment="zhreply">
                                <img src="~/data/@zhihustr/zhihu_reply.png" alt="Zhihu replies" height="200px">
                                <div>
                                    <h8><br></h8>To the picture
                                </div>
                            </a>
                        </td>

                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>