<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SMSA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="shortcut icon" href="~/images/favicon.ico" />
    <link rel="stylesheet" href="~/css/animate.css" />
    <link rel="stylesheet" href="~/css/icomoon.css" />
    <link rel="stylesheet" href="~/css/superfish.css" />
    <link rel="stylesheet" href="~/css/style.css" />

    <!-- Modernizr JS -->
    <script src="~/lib/modernizr-2.6.2.min.js"></script>
    <!-- FOR IE9 BELOW -->
    <!--[if lt IE 9]>
    <script src="js/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <div id="fh5co-wrapper">
        <div id="fh5co-page">
            <div id="fh5co-header">
                <header id="fh5co-header-section">
                    <div class="container">
                        <div class="nav-header">
                            <h1 id="fh5co-logo"><a href="index.html">SMSA</a></h1>
                            <!-- START #fh5co-menu-wrap -->
                            <nav id="fh5co-menu-wrap" role="navigation">
                                <ul class="sf-menu" id="fh5co-primary-menu">
                                    <li class="active">
                                        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li class="active">
                                        <a asp-area="" asp-controller="Choronicle" asp-action="List" class="fh5co-sub-ddown">Choronicle</a>
                                        <ul class="fh5co-sub-menu">
                                            <li><a asp-area="" asp-controller="Choronicle" asp-action="ListWeibo" >WeiBo</a></li>
                                            <li><a asp-area="" asp-controller="Choronicle" asp-action="ListZhihu" >ZhiHu</a></li>
                                        </ul>
                                    </li>
                                    <li class="active">
                                        <a href="listing.html" class="fh5co-sub-ddown">Source Website</a>
                                        <ul class="fh5co-sub-menu">
                                            <li><a href="https://weibo.com/" target="_blank">WeiBo</a></li>
                                            <li><a href="https://www.zhihu.com/" target="_blank">ZhiHu</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </header>
            </div>
            @RenderBody()
        </div><!-- END fh5co-page -->
    </div><!-- END fh5co-wrapper -->

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - SMSA
        </div>
    </footer>
    <!-- Depencies -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery.easing.1.3.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery.waypoints.min.js"></script>
    <script src="~/lib/jquery.stellar.min.js"></script>
    <!-- Superfish -->
    <script src="~/lib/hoverIntent.js"></script>
    <script src="~/lib/superfish.js"></script>
    <!-- main js -->
    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
